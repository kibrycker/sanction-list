<div class="row">
    {{ form_start(form, {'attr': {'class': 'js-add-into-sunctions-list'}}) }}
    {{ form_errors(form) }}
    <div class="form-row">
        <div class="form-group form-floating col-md-6">
            {{ form_row(form.requisite, {
                'errors': false,
                'label_attr': {
                    'class': 'sr-only'
                }
            }) }}
            {{ form_errors(form.requisite) }}
        </div>
        <div class="form-group col-md-6">
            {{ form_row(form.name, {
                'errors': false,
                'label_attr': {
                    'class': 'sr-only'
                }
            }) }}
            {{ form_errors(form.name) }}
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-4">
            {{ form_row(form.country, {
                'is_selected': true,
                'errors': false,
                'label_attr': {
                    'class': 'sr-only'
                }
            }) }}
            {{ form_errors(form.country) }}
            <a href="{{ path('sanction_list_admin_country_new') }}">Добавить страну</a>
        </div>
        <div class="form-group col-md-3">
            <div class="input-group date">
                {{ form_row(form.date_inclusion, {
                    'errors': false,
                    'label_attr': {
                        'class': 'sr-only'
                    }
                }) }}
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
        </div>
        <div class="js-sanction-date-exclusion form-group col-md-5">
            <div class="input-group date">
                {{ form_row(form.date_exclusion, {
                    'errors': false,
                    'label_attr': {
                        'class': 'sr-only'
                    }
                }) }}
                <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                {{ form_errors(form.date_exclusion) }}
            </div>
            {{ form_row(form.unknownExcDate, {
                'label_attr': {
                    'class': 'form-check-label',
                    'data-toggle': 'collapse',
                    'data-target': '#js-date-exclusion'
                },
                'errors': false
            }) }}
            {{ form_errors(form.unknownExcDate) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_row(form.basic, {
            'errors': false,
            'label_attr': {
                'class': 'sr-only'
            }
        }) }}
        {{ form_errors(form.basic) }}
    </div>

    <div class="js-directive-group">
        {{ form_row(form.directive, {
            'errors': false,
            'label_attr': {
                'class': 'sr-only'
            }
        }) }}
        {{ form_errors(form.directive) }}
        <a href="{{ path('sanction_list_admin_directive_new') }}">Добавить директиву</a>
    </div>

    <div class="form-group text-right">
        <button type="submit" class="btn btn-primary">
            <i class="fa fa-floppy-o" aria-hidden="true"></i>&nbsp;
            {{ button_label|default('Сохранить') }}
        </button>
        {% if is_edit %}
            {{ include('organization/_delete_form.html.twig') }}
        {% endif %}
    </div>
    {{ form_end(form) }}
</div>