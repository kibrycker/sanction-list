{% extends 'base.html.twig' %}

{% set title = directive.name %}
{% block title %}{{ title }}{% endblock %}

{% block body %}
    <a href="{{ path('sanction_list_admin_directive_index') }}" class="btn btn-link">К списку директив</a>
    <h1>{{ title }}</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Описание</th>
            <td>{{ directive.description }}</td>
        </tr>
        <tr>
            <th>Дата создания</th>
            <td>{{ directive.dateCreate ? directive.dateCreate|date('d.m.Y H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Дата обновления</th>
            <td>{{ directive.dateUpdate ? directive.dateUpdate|date('d.m.Y H:i:s') : '' }}</td>
        </tr>
        </tbody>
    </table>

    <div class="text-right">
        <a href="{{ path('sanction_list_admin_directive_edit', {'id': directive.id}) }}" class="btn btn-secondary"><i
                    class="fa fa-pencil-square-o" aria-hidden="true"></i>&nbsp;Изменить</a>
        &nbsp;
        <div class="float-right">
            {{ include('directive/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
