{% extends 'base.html.twig' %}

{% set title = 'Список директив' %}
{% block title %}{{ title }}{% endblock %}

{% block body %}
    <a href="{{ path('sanction_list_admin_organization_index') }}" class="btn btn-link">К списку организаций</a>
    <h1>{{ title }}</h1>

    <div class="text-right">
        <a href="{{ path('sanction_list_admin_directive_new') }}" class="btn btn-link">Новая директива</a>
    </div>
    <table class="table table-striped table-bordered text-center">
        <thead class="thead-dark">
        <tr>
            <th scope="col" rowspan="2">#</th>
            <th scope="col" rowspan="2">Название</th>
            <th scope="col" rowspan="2">Описание</th>
            <th scope="col" colspan="2" class="text-center">Дата</th>
            <th scope="col" rowspan="2">Действия</th>
        </tr>
        <tr>
            <th scope="col">Создания</th>
            <th scope="col">Обновления</th>
        </tr>
        </thead>
        <tbody>
        {% for directive in directives %}
            <tr>
                <th scope="row">{{ loop.index + offset }}</th>
                <td>{{ directive.name }}</td>
                <td>{{ directive.description }}</td>
                <td>{{ directive.dateCreate ? directive.dateCreate|date('d.m.Y H:i:s') : '' }}</td>
                <td>{{ directive.dateUpdate ? directive.dateUpdate|date('d.m.Y H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('sanction_list_admin_directive_show', {'id': directive.id}) }}"
                       class="btn btn-info">Просмотр</a>
                    <a href="{{ path('sanction_list_admin_directive_edit', {'id': directive.id}) }}"
                       class="btn btn-light">Изменить</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if (countPages > 1) %}
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-end">
                {% if (page > 1) %}
                    <li class="page-item">
                        <a class="page-link" aria-label="Previous"
                           href="{{ path('sanction_list_admin_directive_index', {'page': page - 1}) }}">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                {% endif %}
                {% for numPages in range(1, countPages) %}
                    <li class="page-item {% if (numPages == page) %}active{% endif %}">
                        <a class="page-link"
                           href="{{ path('sanction_list_admin_directive_index', {'page': numPages}) }}">{{ numPages }}</a>
                    </li>
                {% endfor %}
                {% if (page < countPages) %}
                    <li class="page-item">
                        <a class="page-link" aria-label="Next"
                           href="{{ path('sanction_list_admin_directive_index', {'page': page + 1}) }}">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                {% endif %}
            </ul>
        </nav>
    {% endif %}
{% endblock %}
