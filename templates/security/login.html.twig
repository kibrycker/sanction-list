{% extends 'base.html.twig' %}

{% block body %}
    <form action="{{ path('sanction_list_security_login') }}" method="post" class="form-signin">
        <h1 class="h3 mb-3 font-weight-normal">Пожалуйста авторизуйтесь</h1>
        <label for="inputUserName" class="sr-only">Логин</label>
        <input type="text" id="inputUserName" name="_username" class="form-control" placeholder="Логин" required autofocus  value="{{ last_username }}">
        <label for="inputPassword" class="sr-only">Пароль</label>
        <input type="password" id="inputPassword" name="_password" class="form-control" placeholder="Пароль" required>
        <input type="hidden" name="_target_path" value="{{ app.request.get('redirect_to') }}"/>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" value="remember-me"> Запоминить меня
            </label>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Войти</button>
    </form>
{% endblock %}